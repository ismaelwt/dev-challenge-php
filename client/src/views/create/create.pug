.page-header
    h1 Create ToDo Item
form.form-horizontal(ng-submit='submit()')
    .row
        .col-sm-6
            .form-group
                label.control-label.col-sm-4(for='name') Name
                .col-sm-8
                    input#name.form-control(type='text' focus-on='focusMe' ng-model='todoItem.name')
            .form-group
                label.control-label.col-sm-4(for='description') description
                .col-sm-8
                    input#description.form-control(type='text' ng-model='todoItem.description')
            .form-group
                label.control-label.col-sm-4(for='done') done?
                .col-sm-2
                    input#done.form-control(type='checkbox' ng-model='todoItem.done')
    .form-group
        .col-sm-offset-1.col-sm-2
            input.btn.btn-primary(type='submit' value='Create')
        .col-sm-offset-1.col-sm-2
            input.btn.btn-default(type='button' value='Back' ng-click='back()')
